<%- include('header') %>

<div class="card">
    <div class="card-body">
        <div class="card-title">บันทึกการรับชำระเงิน บิล: <%= orderId %></div>
        <form method="post">
            <div class="mt-2">
                <label>วันที่ชำระเงิน</label>
                <input type="date" class="form-control" name="pay_date">
            </div>
            <div class="mt-2">
                <label>หมายเหตุ</label>
                <input type="text" class="form-control" name="pay_remark">
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-info">
                    SAVE
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('footer') %>