<%- include('header') %>

<form method="post">
    <div class="card">
        <div class="card-body">
            <div class="card-title">เพิ่มผู้ใช้งานระบบ</div>
            <div class="mt-3">
                <label>ชื่อ</label>
                <input type="text" name="name" class="form-control" value="<%= user.name %>">
            </div>
            <div class="mt-3">
                <label>username</label>
                <input type="text" name="user" class="form-control" value="<%= user.user %>">
            </div>
            <div class="mt-3">
                <label>Password</label>
                <input type="password" name="password" class="form-control" value="<%= user.password %>">
            </div>
            <div class="mt-3">
                <label>Level</label>
                <div>
                    <input type="radio" name="level" value="user" <% if (user.level == 'user') { %>checked<% } %> /> user
                    <input type="radio" name="level" value="admin" <% if (user.level == 'admin') { %>checked<% } %>> admin
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-info">
                    SAVE
                </button>
            </div>
        </div>
    </div>
</form>

<%- include('footer') %>