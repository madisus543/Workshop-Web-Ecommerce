<%- include('header') %>

<div class="mt-2">
    <div class="h4">รายการสั่งซื้อจากลูกค้า</div>
    <table class="mt-2 table table-bordered table-striped">
        <thead>
            <tr>
                <th width="120px">ภาพสินค้า</th>
                <th width="100px">บาร์โค้ด</th>
                <th>รายการสินค้า</th>
                <th width="100px">ราคา</th>
                <th width="100px">จำนวน</th>
                <th width="100px">ยอดรวม</th>
            </tr>
        </thead>
        <tbody>
            <% orderDetails.forEach((orderDetail) => { %>
                <tr>
                    <td><img src="../images/<%= orderDetail.image %>" width="100px"></td>
                    <td><%= orderDetail.barcode %></td>
                    <td><%= orderDetail.name %></td>
                    <td class="text-right"><%= orderDetail.price %></td>
                    <td class="text-right"><%= orderDetail.qty %></td>
                    <td class="text-right"><%= orderDetail.qty * orderDetail.price %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="alert alert-success mt-2">
        จำนวน = <%= totalQty %> รายการ
        ราคาทั้งหมด = <%= totalPrice %> บาท
    </div>
</div>

<%- include('footer') %>