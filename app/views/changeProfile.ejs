<%- include('header')  %>

<h3>ChangeProfile</h3>
<form method="post" action="/changeProfile">
    <div class="card">
        <div class="card-body">
            <div class="card-title">แก้ไขข้อมูล</div>
            <div class="mt-3">
                <label>ชื่อ</label>
                <input type="text" name="name" class="form-control" value="<%= user.name %>">
            </div>
            <div class="mt-3">
                <label>Username</label>
                <input type="text" name="user" class="form-control" value="<%= user.user %>">
            </div>
            <div class="mt-3">
                <label>Password <span class="text-danger"> !!ถ้าไม่ป้อนจะยึดตามเดิม!!</span></label>
                <input type="password" name="password" class="form-control" >
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-info">
                    SAVE
                </button>
            </div>

            <% if (session.message != undefined) { %>
            <div class="alert alert-success mt-3">
                <%= session.message %>
                <% session.message = undefined %>
            </div>
            <% } %>

        </div>
    </div>
</form>

<%- include('footer')  %>